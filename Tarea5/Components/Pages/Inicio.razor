@page "/"
@rendermode InteractiveServer
<PageTitle>Inicio</PageTitle>
<h3>Dashboard Principal</h3>
<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total de Plataformas</div>
            <div class="card-body">
                <h5 class="card-title">@plataformas.Count</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total de Videojuegos</div>
            <div class="card-body">
                <h5 class="card-title">@videoJuegos.Count</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Total de Personajes</div>
            <div class="card-body">
                <h5 class="card-title">@personajes.Count</h5>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter] public int id {get;set;}
    private List<Personajes> personajes = new List<Personajes>();
    private List<Plataformas> plataformas = new List<Plataformas>();
    private List<VideoJuegos> videoJuegos = new List<VideoJuegos>();

    protected override async Task OnInitializedAsync()
    {
        personajes = await Bd.PersonajeContext.ToListAsync();
        plataformas = await Bd.PlataformaContext.ToListAsync();
        videoJuegos = await Bd.VideoJuegoContext.ToListAsync();
    }
}